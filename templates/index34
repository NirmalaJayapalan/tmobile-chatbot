<body>
    <div class="chat-container">
        <div class="chat-header">
            <img src="{{ url_for('static', filename='tmobile-logo.png') }}" alt="T-Mobile Logo">
            <h2>T-Mobile Chatbot</h2>
        </div>

        <div id="chatbox"></div>

        <div class="chat-input">
            <input type="text" id="query" placeholder="Ask me about devices, plans, promotions..." />
            <button onclick="sendQuery()">Send</button>
        </div>
    </div>

    <script>
        function addMessage(sender, text, category) {
            const chatbox = document.getElementById("chatbox");
            const div = document.createElement("div");
            div.className = "message " + sender;
            if(category) div.classList.add(category); // add category class for coloring
            div.innerHTML = text;
            chatbox.appendChild(div);
            chatbox.scrollTop = chatbox.scrollHeight;
        }

        function sendQuery() {
            const input = document.getElementById("query");
            const query = input.value.trim();
            if (!query) return;
            addMessage("user", query);
            input.value = "";

            fetch("/ask", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({query: query})
            })
            .then(res => res.json())
            .then(data => {
                // Devices
                if (data.devices && data.devices.length > 0) {
                    let msg = "<b>üì± Devices:</b><br>";
                    data.devices.forEach(d => {
                        msg += `‚Ä¢ ${d.model} (${d.type}) - $${d.price}`;
                        if (d.screen) msg += `, ${d.screen}`;
                        if (d.storage) msg += `, ${d.storage}`;
                        if (d.features) msg += `, features: ${d.features.join(", ")}`;
                        msg += "<br>";
                    });
                    addMessage("bot", msg, "devices");
                }

                // Plans
                if (data.plans && data.plans.length > 0) {
                    let msg = "<b>üìÑ Plans:</b><br>";
                    data.plans.forEach(p => {
                        msg += `‚Ä¢ ${p.name} - $${p.price_per_month}/month, ${p.lines} line(s), ${p.data} data`;
                        if (p.features) msg += `, features: ${p.features.join(", ")}`;
                        msg += "<br>";
                    });
                    addMessage("bot", msg, "plans");
                }

                // Promotions
                if (data.promotions && data.promotions.length > 0) {
                    let msg = "<b>üéÅ Promotions:</b><br>";
                    data.promotions.forEach(p => {
                        msg += `‚Ä¢ ${p.description}<br>`;
                    });
                    addMessage("bot", msg, "promotions");
                }

                // Services
                if (data.services && data.services.length > 0) {
                    let msg = "<b>‚öôÔ∏è Services:</b><br>";
                    data.services.forEach(s => {
                        msg += `‚Ä¢ ${s.name}`;
                        if (s.price_per_month) msg += ` - $${s.price_per_month}/month`;
                        msg += "<br>";
                    });
                    addMessage("bot", msg, "services");
                }

                if ((!data.devices || data.devices.length === 0) &&
                    (!data.plans || data.plans.length === 0) &&
                    (!data.promotions || data.promotions.length === 0) &&
                    (!data.services || data.services.length === 0)) {
                    addMessage("bot", "Sorry, no matching results found.");
                }
            })
            .catch(err => {
                addMessage("bot", "Oops! Something went wrong. Please try again.");
                console.error(err);
            });
        }
    </script>
</body>
